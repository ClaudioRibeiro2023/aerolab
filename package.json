{
  "name": "@aerolab/platform",
  "version": "1.0.0",
  "packageManager": "pnpm@9.15.9",
  "private": true,
  "description": "AeroLab - Plataforma Corporativa",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @aerolab/studio run dev:9000",
    "dev:web": "pnpm --filter @template/web run dev",
    "dev:studio": "pnpm --filter @aerolab/studio run dev -- -p 9000",
    "dev:api": "cd apps/api && uvicorn server:app --reload --port 8000",
    "dev:all": "concurrently -n api,studio -c blue,green \"pnpm dev:api\" \"pnpm dev\"",
    "build": "pnpm run build:packages && pnpm run build:app",
    "build:packages": "pnpm --filter @template/types run build && pnpm --filter @template/shared run build && pnpm --filter @template/design-system run build",
    "build:app": "pnpm --filter @template/web run build",
    "build:studio": "pnpm --filter @aerolab/studio run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "test:e2e": "pnpm --filter @template/web run test:e2e",
    "factory:validate": "python scripts/factory_validate.py",
    "clean": "rimraf node_modules packages/*/node_modules apps/*/node_modules packages/*/dist apps/*/dist",
    "setup": "node scripts/setup.js",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ],
    "apps/api/**/*.py": [
      "ruff check --fix",
      "ruff format"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "rimraf": "^5.0.5",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
